<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Layout para la informaciÃ³n del gerente -->
    <ImageView
        android:id="@+id/imageViewPfp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/amogusred" />

    <TextView
        android:id="@+id/textViewNameCourier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPfp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="Admin"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNameCourier"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="Online"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Edit Profile" />
</RelativeLayout>
